<br />

<div class="row">
  <div class="span8">
    <h1>Collect live data from your audience</h1>
    <p>Ask questions and see the results rendered directly on your slide</p>

    <%= form_tag("/beta_tester", :method => "post", :class => 'well push-down') do %>
        <%= hidden_field_tag 'application', 'live_data' %>
        <%= text_field_tag 'email', nil, :placeholder => 'Enter your email', :class => 'text-xlarge' %>
        <%= submit_tag("Be a beta tester", :class => 'btn-xlarge btn-primary', :style => "float:right") %>
    <% end %>
  </div>
  <div class="span4">
    <iframe width="360" height="480" src="http://www.youtube.com/embed/jHJl-b3U40w" frameborder="0" allowfullscreen></iframe>
  </div>
</div>